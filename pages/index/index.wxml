<view class="container" style="background-image: url('images/indexbj2.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center center;">
  <!-- 搜索框 -->
  <view class="search-box" style="z-index: 1; position: relative; width: 583rpx; height: 79rpx; display: flex; box-sizing: content-box; left: 0rpx; top: 0rpx">
    <view class="search-container" style="width: 527rpx; height: 79rpx; display: flex; box-sizing: border-box">
      <button class="search-btn" bindtap="onSearchTap" style="width: 95rpx; height: 74rpx; display: flex; box-sizing: border-box; left: 0rpx; top: 0rpx">
        <image class="search-icon" src="images/sousuo.png" />
      </button>
      <input bindinput="onSearchInput" placeholder="请输入搜索内容" style="border-color: rgb(250, 250, 250); border-width: 1px; border-radius: 5px; padding: 10px; font-size: 14px;" />
    </view>
  </view>

  <!-- 推荐的项目列表 -->
  <view class="recommendations">
    <block wx:for="{{filteredRecommendations}}" wx:key="id">
      <view class="recommendation-item" bindtap="goToDetail" data-id="{{item.id}}">
        <view class="recommendation-top" style="width: 616rpx; height: 45rpx; display: flex; box-sizing: border-box">
          <text class="recommendation-title">{{item.title}}</text>
        </view>
        <image src="{{item.imgUrl}}" mode="aspectFill" class="recommendation-img" />
        <view class="recommendation-info">
          <text class="recommendation-description">{{item.description}}</text>
        </view>
      </view>
    </block>
  </view>
</view>