/* userInfo.wxss */
.container {
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 2px solid #007aff;
  position: relative; /* 使进度条定位 */
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.progress {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
}

.identity-group {
  margin-top: 20px;
}

.identity-label {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.checkmark {
  color: #007aff;
  margin-left: 5px;
}

.nickname-input,
.bio-input {
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
}

.save-button {
  margin-top: 20px;
  background-color: #007aff;
  color: white;
  padding: 10px;
  border-radius: 5px;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background: white;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
}

.confirm-btn {
  background-color: #007aff;
  color: white;
  margin-right: 10px;
}

.cancel-btn {
  background-color: #ccc;
}

.status {
  margin-top: 20px;
  text-align: center;
}

.success {
  color: green;
}

.error {
  color: red;
}
