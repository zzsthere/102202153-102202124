<view class="container">  
  <view class="card">  
    <view class="title">登录</view>  
    <input class="input" type="text" placeholder="手机号码" bindinput="onPhoneNumberInput" />  
    <view class="error" wx:if="{{phoneNumberError}}">{{phoneNumberError}}</view>  
    <input class="input" type="password" placeholder="密码" bindinput="onPasswordInput" />  
    <view class="error" wx:if="{{passwordError}}">{{passwordError}}</view>  
    <button class="button" bindtap="onGetCode">获取验证码</button>  
    <view class="countdown" wx:if="{{countdown > 0}}">{{countdown}}秒</view>  
    <input class="input" type="text" placeholder="验证码" bindinput="onCodeInput" />  
    <button class="button" bindtap="onLogin">登录</button>  
  </view>  
</view>