/* 登录页样式 */  
.container {  
  padding: 20px;  
}  
  
.card {  
  background-color: #F5F5F5;  
  border: 1px solid #CCEEFF;  
  border-radius: 10px;  
  padding: 20px;  
  margin-bottom: 20px;  
}  
  
.error {  
  color: red;  
  font-size: 12px;  
  margin-top: 5px;  
}  
  
.countdown {  
  color: #FFA500;  
  font-size: 14px;  
  margin-top: 10px;  
  text-align: center;  
}