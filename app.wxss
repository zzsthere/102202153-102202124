/* 全局样式 */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", "Arial", sans-serif;
  margin: 0;
  padding: 0;
  /* 设置顶部导航栏为透明 */
  --system-top-nav-background-color: transparent;
}

/* 标题样式 */
.title {
  font-size: 18px;
  font-weight: bold;
  color: #9fc2fa;
}

/* 正文样式 */
.text {
  font-size: 14px;
  color: #000;
}

/* 按钮样式 */
.button {
  background-color: #43546e;
  color: white;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 14px;
  font-weight: bold;
}

.button:hover,
.button:active {
  background-color: #1b305f;
}

/* 输入框样式 */
.input {
  background-color: white;
  border: 1px solid #CCCCFF;
  border-radius: 5px;
  padding: 10px;
  font-size: 14px;
}

.input:focus {
  border-color: #9fc0f7;
  box-shadow: 0 0 5px rgba(41, 46, 54, 0.3);
}

/* 列表项样式 */
.list-item {
  background-color: white;
  padding: 10px;
  margin-bottom: 1px;
  border-bottom: 1px solid #ccc;
}

.list-item:hover {
  background-color: #E6F0FF;
}

/* 提示框样式 */
.toast {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 14px;
  display: none;
}

.toast.success {
  background-color: rgba(0, 128, 0, 0.7);
}

.toast.error {
  background-color: rgba(255, 0, 0, 0.7);
}